<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blog page</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverimageurl %>" width="500px">
        <br><br>
        <pre class="mt-3"><%= blog.body %></pre>
    </div>
    <div class="container mt-4">
        <p>The author:</p>
        <img src="<%= blog.createdby.profileimageurl %>" width="25px">
        <%= blog.createdby.fullname %>
    </div>

    <% if (locals.user) { %>
        <div class="container mt-3">
        <h4>Total commants:<%= comment.length %></h4>
        <h4>Comment on this blog</h4>
        <form action="/blog/comment/<%= blog._id %>" method="post">
            <div class="mb-3">
            <input type="text" class="form-control"  name="content" placeholder="Enter your Comment">
            <br>
            <button type="submit" class="btn btn-sm btn-primary">Submit</button>
            </div>
        </form>
        </div>
    <% } %>
    <div class="container mt-3 box">
        <% comment.forEach(all => { %>
            <div>
                <img src="<%= all.createdby.profileimageurl %>" width="25px">
                <%= all.createdby.fullname %>
                <pre><%= all.content %></pre>
            </div>
        <% }) %>
    </div>
    <%- include('./partials/scripts') %>
</body>
</html>